<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/formula"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:text="Total:"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/reiniciar"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:backgroundTint="#3F51B5"
            android:text="C"
            android:textSize="24sp" />

        <Button
            android:id="@+id/parentesesEsquerdo"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:backgroundTint="#3F51B5"
            android:text="("
            android:textSize="24sp" />

        <Button
            android:id="@+id/parentesesDireito"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:backgroundTint="#3F51B5"
            android:text=")"
            android:textSize="24sp" />

        <Button
            android:id="@+id/divisao"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="รท"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sete"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:backgroundTint="#00BCD4"
            android:text="7"
            android:textSize="24sp" />

        <Button
            android:id="@+id/oito"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:backgroundTint="#00BCD4"
            android:text="8"
            android:textSize="24sp" />

        <Button
            android:id="@+id/nove"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:backgroundTint="#00BCD4"
            android:text="9"
            android:textSize="24sp" />

        <Button
            android:id="@+id/multiplicacao"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="x"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/quatro"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:backgroundTint="#00BCD4"
            android:text="4"
            android:textSize="24sp" />

        <Button
            android:id="@+id/cinco"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:backgroundTint="#00BCD4"
            android:text="5"
            android:textSize="24sp" />

        <Button
            android:id="@+id/seis"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:backgroundTint="#00BCD4"
            android:text="6"
            android:textSize="24sp" />

        <Button
            android:id="@+id/subtracao"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="-"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/um"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:backgroundTint="#00BCD4"
            android:text="1"
            android:textSize="24sp" />

        <Button
            android:id="@+id/dois"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:backgroundTint="#00BCD4"
            android:text="2"
            android:textSize="24sp" />

        <Button
            android:id="@+id/tres"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:backgroundTint="#00BCD4"
            android:text="3"
            android:textSize="24sp" />

        <Button
            android:id="@+id/soma"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="+"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/zero"
            android:layout_width="187dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:backgroundTint="#00BCD4"
            android:text="0"
            android:textSize="24sp" />

        <Button
            android:id="@+id/ponto"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:backgroundTint="#3F51B5"
            android:text="."
            android:textSize="24sp" />

        <Button
            android:id="@+id/igual"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="="
            android:textSize="24sp" />

    </LinearLayout>

</LinearLayout>